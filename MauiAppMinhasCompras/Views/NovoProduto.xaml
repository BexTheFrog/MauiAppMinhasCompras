<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto">

    <NavigationPage.TitleView>
        <Label Text="Novo Produto"
               FontFamily="Cerebri"
               FontSize="20"
               TextColor="#E7EDEB"
               Padding="10"
               VerticalTextAlignment="Center"/>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="Salvar_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">

            <Label Text="Nome do Item"
                           FontFamily="Cerebri"
                           FontAttributes="Bold" 
                           FontSize="Medium"
                           TextColor="#7C1F31"/>
            <Entry x:Name="txt_nome" Placeholder="Digite o nome do produto" PlaceholderColor="Grey" />

            <Label Text="Quantidade"
                           FontFamily="Cerebri"
                           FontAttributes="Bold" 
                           FontSize="Medium" 
                           TextColor="#7C1F31"/>
            <Entry x:Name="txt_qtd" Keyboard="Numeric" Placeholder="0" PlaceholderColor="Grey"/>


            <Label Text="Valor"
                           FontFamily="Cerebri"
                           FontAttributes="Bold" 
                           FontSize="Medium" 
                           TextColor="#7C1F31"/>
            <Entry x:Name="txt_vlr" Keyboard="Numeric" Placeholder="0,00" PlaceholderColor="Grey"/>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
