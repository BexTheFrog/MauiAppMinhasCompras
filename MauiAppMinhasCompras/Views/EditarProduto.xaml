<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="{Binding Descricao}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar Alterações" Clicked="Salvar_Alteracoes"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Spacing="20" Padding="20">


        <Label Text="Nome do Item:"
                       FontFamily="Cerebri"
                       FontAttributes="Bold" 
                       FontSize="Medium"
                       TextColor="#1a0089"/>
        <Entry x:Name="txt_nome" Placeholder="{Binding Descricao}" PlaceholderColor="Grey" />


        <Label Text="Quantidade:"
                       FontFamily="Cerebri"
                       FontAttributes="Bold" 
                       FontSize="Medium" 
                       TextColor="DimGray"/>
        <Entry x:Name="txt_qtd" Keyboard="Numeric" Placeholder="{Binding Quantidade}" PlaceholderColor="Grey"/>

        <Label Text="Valor Unitário:"
                       FontFamily="Cerebri"
                       FontAttributes="Bold" 
                       FontSize="Medium" 
                       TextColor="DimGray"/>
        <Entry x:Name="txt_vlr" Keyboard="Numeric" Placeholder="{Binding Preco, StringFormat='R$ {0:F2}'}" PlaceholderColor="Grey"/>


    </VerticalStackLayout>
</ContentPage>